<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_movie_list_text_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

<com.animation.animpresseffect.PressEffectCardView
    android:id="@+id/card_item_movie_container_text"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_margin="4dp"
    android:backgroundTint="@color/background_gray"
    app:cardElevation="10dp"
    app:button_duration="600"
    app:button_scale="1"
    android:elevation="10dp"
    android:layout_weight="0.9">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">


            <TextView
                android:id="@+id/tv_item_movie_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de pelicula"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold"
                android:singleLine="false"
                android:maxEms="14"
                android:clickable="false"/>
        <TextView
            android:id="@+id/tv_item_movie_gender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generos de la pelicula"
            android:textColor="@color/white"
            android:singleLine="false"
            android:maxEms="14"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_movie_name_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/tv_item_movie_ranking_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calificacion"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_movie_duration_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/tv_item_movie_duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(AÃ±o)"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.animation.animpresseffect.PressEffectCardView>
</LinearLayout>