<com.animation.animpresseffect.PressEffectCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="128dp"
    android:layout_height="172dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="4dp"
    android:backgroundTint="@color/background_gray"
    app:cardElevation="10dp"
    app:button_duration="600"
    app:button_scale="1"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_movie_poster"
            android:layout_width="112dp"
            android:layout_height="154dp"
            app:riv_border_color="@color/primaryColor"
            app:riv_corner_radius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <xyz.damonbaker.strikedimageview.StrikedImageView
            android:id="@+id/item_movie_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="#11FFFFFF"
            android:tint="@color/primaryColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_eye_24"
            app:striked="true" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.animation.animpresseffect.PressEffectCardView>