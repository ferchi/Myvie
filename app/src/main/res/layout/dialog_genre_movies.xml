<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:paddingBottom="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_name_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/tv_background"
        android:gravity="center"
        android:padding="6dp"
        android:text="Nombre del gÃ©nero"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/btn_genre_back_page"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/back"
            android:layout_marginEnd="16dp"
            />
        <TextView
            android:id="@+id/tv_genre_page"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/btn_genre_next_page"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/next"
            android:layout_marginStart="16dp"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_dialog_genre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp" />


</LinearLayout>