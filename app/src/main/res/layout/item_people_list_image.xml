<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_movie_list_text_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    >
    <com.animation.animpresseffect.PressEffectContainerLayout
        android:id="@+id/card_civ_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_people_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/myvie_logo"
        />
    </com.animation.animpresseffect.PressEffectContainerLayout>

    <com.animation.animpresseffect.PressEffectCardView
        android:id="@+id/card_item_people_container_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="-10dp"
        android:backgroundTint="@color/background_gray"
        app:cardElevation="10dp"
        app:button_duration="600"
        app:button_scale="1"
        android:elevation="10dp"
        android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:layout_gravity="center"
        android:translationZ="90dp">

        <TextView
            android:id="@+id/tv_item_people_name_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:clickable="false"
            android:maxEms="14"
            android:singleLine="false"
            android:text="Nombre de persona"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.animation.animpresseffect.PressEffectCardView>
</LinearLayout>